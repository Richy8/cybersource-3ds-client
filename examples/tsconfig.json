{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "jsx": "react-jsx",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
            "@deskcreate/cybersource-3ds-web": [
                "../src"
            ]
        }
    },
    "include": [
        "**/*",
        "../src/**/*"
    ],
    "exclude": [
        "../node_modules",
        "../dist"
    ]
}